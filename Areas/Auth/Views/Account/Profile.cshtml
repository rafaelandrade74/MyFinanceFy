@model UserModel
@{
    ViewData["Title"] = "Profile";
}

<section class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Perfil</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content-header -->
<!-- Content Header (Page header) -->
@Html.AntiForgeryToken()
<section class="content">
    <div class="container-fluid">
        <div class="row d-flex justify-content-center">
            <partial name="_MenuProfile" for="@ViewData["Title"]" />


            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->

                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Meu Perfil</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->

                    <form id="profile-form" method="post">

                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Username" class="form-label"></label>
                                <input asp-for="Username" class="form-control" readonly />
                            </div>
                            <div class="form-group">
                                <label asp-for="FullName" class="form-label"></label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-12">
                                        <label asp-for="PhoneNumber" class="form-label"></label>
                                    </div>
                                    <div class="col-4">
                                        <select asp-for="PhoneCountryCode" class="form-control" asp-items="@Html.GetEnumSelectList<PhoneCountryCode>().OrderBy(x=> x.Text)">
                                        </select>
                                    </div>
                                    <div class="col-8">
                                        <input asp-for="PhoneNumber" data-mask="(00) 0 0000-0000" class="form-control" />
                                    </div>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            

                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Atualizar</button>
                        </div>
                    </form>

                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>

<!-- /.content-wrapper -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />  
}
