@model ForgotPasswordModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "/Areas/Auth/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Pagina = "login-page";
}

<div class="login-box">
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <a href="/" class="h1">@Constantes.MyFinancefy</a>
        </div>
        <div class="card-body">
            <p class="login-box-msg">Recupere sua senha.</p>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <span asp-validation-for="Email" class="text-danger"></span>
                <div class="input-group mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Email" autocomplete="username" aria-required="true" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block">Recuperar senha</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <p class="mt-3 mb-1">
                <a asp-action="Login" >Login</a>
            </p>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>
<!-- /.login-box -->


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


